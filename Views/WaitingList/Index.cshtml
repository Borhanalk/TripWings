@model IEnumerable<WaitingList>
@{
    ViewData["Title"] = "רשימת המתנה / Waiting List";
}

<h2>רשימת המתנה / Waiting List</h2>

<table class="table">
    <thead>
        <tr>
            <th>חבילה / Package</th>
            <th>מספר נוסעים / Number of Travelers</th>
            <th>תאריך בקשה / Request Date</th>
            <th>קיבל הודעה / Notified</th>
            <th>פעולות / Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Package.Name</td>
                <td>@item.NumberOfTravelers</td>
                <td>@item.RequestDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.IsNotified)
                    {
                        <span class="badge bg-success">כן / Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">לא / No</span>
                    }
                </td>
                <td>
                    @if (item.Package.IsAvailable)
                    {
                        <a asp-controller="Bookings" asp-action="Create" asp-route-packageId="@item.PackageId" class="btn btn-sm btn-success">הזמן כעת / Book Now</a>
                    }
                    <form asp-action="RemoveFromWaitingList" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('האם אתה בטוח שברצונך למחוק? / Are you sure you want to delete?')">מחק / Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
