@model IEnumerable<WaitingList>
@{
    ViewData["Title"] = "قائمة الانتظار";
}

<h2>قائمة الانتظار</h2>

<table class="table">
    <thead>
        <tr>
            <th>الباقة</th>
            <th>عدد المسافرين</th>
            <th>تاريخ الطلب</th>
            <th>تم الإشعار</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Package.Name</td>
                <td>@item.NumberOfTravelers</td>
                <td>@item.RequestDate.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.IsNotified)
                    {
                        <span class="badge bg-success">نعم</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">لا</span>
                    }
                </td>
                <td>
                    @if (item.Package.IsAvailable)
                    {
                        <a asp-controller="Bookings" asp-action="Create" asp-route-packageId="@item.PackageId" class="btn btn-sm btn-success">احجز الآن</a>
                    }
                    <form asp-action="RemoveFromWaitingList" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد من الحذف؟')">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
