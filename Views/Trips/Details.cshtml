@model TravelPackage
@{
    ViewData["Title"] = "פרטי טיול";
    var activeDiscount = Model.Discounts.FirstOrDefault(d => 
        d.StartAt <= DateTime.UtcNow && d.EndAt >= DateTime.UtcNow && 
        (d.EndAt - d.StartAt).TotalDays <= 7);
}

<div class="page-header mb-4">
    <h1 class="mb-2">
        <i class="bi bi-geo-alt-fill me-2"></i>@Model.Destination, @Model.Country
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        @if (Model.PackageImages.Any())
        {
            <div id="carouselExample" class="carousel slide mb-4 shadow-sm rounded">
                <div class="carousel-inner">
                    @foreach (var image in Model.PackageImages)
                    {
                        <div class="carousel-item @(image == Model.PackageImages.First() ? "active" : "")">
                            <img src="@image.ImageUrl" class="d-block w-100" alt="@Model.Destination" 
                                 style="height: 500px; object-fit: cover;">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">הקודם</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">הבא</span>
                </button>
            </div>
        }
        
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>תיאור
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow-sm sticky-top" style="top: 20px;">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-check me-2"></i>פרטי הזמנה
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>
                        <i class="bi bi-tag me-1"></i>קטגוריה / Category:
                    </strong>
                    <span class="badge bg-secondary">@Model.PackageType</span>
                </div>
                
                <div class="mb-3">
                    <strong>
                        <i class="bi bi-building me-1"></i>מספר חדרים כולל / Total Rooms:
                    </strong>
                    <span>@(ViewBag.TotalRooms as int? ?? Model.TotalRooms)</span>
                </div>
                
                @if (Model.AgeLimit.HasValue)
                {
                    <div class="mb-3">
                        <strong>
                            <i class="bi bi-person me-1"></i>הגבלת גיל:
                        </strong>
                        מ-@Model.AgeLimit.Value שנים
                    </div>
                }
                
                <div class="mb-3">
                    <strong>
                        <i class="bi bi-calendar-event me-1"></i>תאריכים:
                    </strong>
                    <div>
                        <small>יציאה: @Model.StartDate.ToString("dd/MM/yyyy")</small><br>
                        <small>חזרה: @Model.EndDate.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
                
                <div class="mb-3">
                    <strong>
                        <i class="bi bi-door-open me-1"></i>חדרים זמינים / Available Rooms:
                    </strong>
                    @{
                        var remainingRooms = ViewBag.RemainingRooms as int? ?? 0;
                        var availableRooms = ViewBag.AvailableRooms as int? ?? Model.AvailableRooms;
                        var bookedRooms = ViewBag.BookedRooms as int? ?? 0;
                        var totalRooms = ViewBag.TotalRooms as int? ?? Model.TotalRooms;
                        var waitingListCount = ViewBag.WaitingListCount as int? ?? 0;
                    }
                    <div class="mt-2">
                        @if (remainingRooms > 0)
                        {
                            <div class="alert alert-success mb-2">
                                <i class="bi bi-check-circle me-2"></i>
                                <strong>@remainingRooms</strong> חדרים זמינים / <strong>@remainingRooms</strong> rooms available
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger mb-2">
                                <i class="bi bi-x-circle me-2"></i>
                                <strong>אין חדרים זמינים / No rooms available</strong>
                            </div>
                        }
                        <div class="small text-muted">
                            <div><i class="bi bi-info-circle me-1"></i>סה"כ חדרים / Total Rooms: <strong>@totalRooms</strong></div>
                            <div><i class="bi bi-check-circle me-1"></i>חדרים זמינים / Available Rooms: <strong>@availableRooms</strong></div>
                            <div><i class="bi bi-calendar-check me-1"></i>חדרים מוזמנים / Booked Rooms: <strong>@bookedRooms</strong></div>
                            <div><i class="bi bi-door-open me-1"></i>חדרים נותרים / Remaining Rooms: <strong>@remainingRooms</strong></div>
                            @if (waitingListCount > 0)
                            {
                                <div class="mt-2">
                                    <i class="bi bi-clock-history me-1"></i>
                                    <strong>@waitingListCount</strong> משתמשים ברשימת המתנה / <strong>@waitingListCount</strong> users in waiting list
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="mb-4">
                    <strong>
                        <i class="bi bi-currency-dollar me-1"></i>מחיר:
                    </strong>
                    @if (activeDiscount != null)
                    {
                        <div class="mt-2">
                            <span class="price-old me-2">@activeDiscount.OldPrice.ToString("C")</span>
                            <span class="price-new">@activeDiscount.NewPrice.ToString("C")</span>
                            <span class="badge bg-danger ms-2">
                                -@activeDiscount.DiscountPercentage.ToString("F0")%
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="fs-4 text-primary fw-bold mt-2">@Model.Price.ToString("C")</div>
                    }
                </div>
                
                <div class="d-grid gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var isAvailable = ViewBag.IsAvailable as bool? ?? Model.IsAvailable;
                        var userHasValidNotification = ViewBag.UserHasValidNotification as bool? ?? false;
                        var hasOtherUserActiveNotification = ViewBag.HasOtherUserActiveNotification as bool? ?? false;
                        
                        @if (hasOtherUserActiveNotification)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>חדר זמין כרגע, אך משתמש אחר ברשימת ההמתנה (מיקום #1) קיבל עדיפות.</strong> אנא המתן לתורך. / 
                                <strong>A room is available, but another user in the waiting list (position #1) has priority.</strong> Please wait for your turn.
                            </div>
                            <a asp-controller="Booking" asp-action="JoinWaitingList" asp-route-travelPackageId="@Model.Id" 
                               class="btn btn-warning btn-lg w-100">
                                <i class="bi bi-clock-history me-2"></i>הצטרף לרשימת המתנה
                            </a>
                        }
                        else if (isAvailable || userHasValidNotification)
                        {
                            @if (userHasValidNotification && !Model.IsAvailable)
                            {
                                <div class="alert alert-success mb-3">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <strong>יש לך התראה פעילה!</strong> אתה במצב #1 ברשימת המתנה ויש לך 10 דקות להזמין. / 
                                    <strong>You have an active notification!</strong> You are position #1 in the waiting list and have 10 minutes to book.
                                </div>
                            }
                            
                            <a asp-controller="Booking" asp-action="Create" asp-route-travelPackageId="@Model.Id" 
                               class="btn btn-primary btn-lg">
                                <i class="bi bi-calendar-check me-2"></i>הזמן עכשיו
                            </a>
                            <a asp-controller="Payment" asp-action="ProcessPayment" 
                               asp-route-travelPackageId="@Model.Id" asp-route-roomsCount="1" 
                               class="btn btn-success btn-lg">
                                <i class="bi bi-credit-card me-2"></i>קנה עכשיו
                            </a>
                            @if (Model.IsAvailable)
                            {
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-travelPackageId="@Model.Id" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-cart-plus me-2"></i>הוסף לעגלה
                                </a>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning mb-3">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>החבילה מלאה!</strong> אין חדרים זמינים כרגע. הצטרף לרשימת המתנה ונודיע לך כשיתפנה מקום.
                            </div>
                            <a asp-controller="Booking" asp-action="JoinWaitingList" asp-route-travelPackageId="@Model.Id" 
                               class="btn btn-warning btn-lg w-100">
                                <i class="bi bi-clock-history me-2"></i>הצטרף לרשימת המתנה
                            </a>
                        }
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>התחבר להזמנה
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Carousel auto-play
        var carousel = new bootstrap.Carousel(document.querySelector('#carouselExample'), {
            interval: 3000,
            wrap: true
        });
    </script>
}
