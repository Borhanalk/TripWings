<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - טריפווינגס</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <a class="sidebar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane-fill me-2"></i>טריפווינגס
                </a>
                <button type="button" id="sidebarCollapse" class="btn btn-sm btn-outline-danger d-lg-none">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            
            <ul class="list-unstyled components">
                @if (!User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2"></i>בית
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Trips" asp-action="Gallery">
                            <i class="bi bi-images me-2"></i>גלריית טיולים
                        </a>
                    </li>
                }
                @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Booking" asp-action="MyBookings">
                            <i class="bi bi-calendar-check me-2"></i>ההזמנות שלי
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Booking" asp-action="MyWaitingList">
                            <i class="bi bi-clock-history me-2"></i>רשימת המתנה
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-area="" asp-controller="Cart" asp-action="Index">
                            <i class="bi bi-cart me-2"></i>עגלה
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-lock me-2"></i>מדיניות פרטיות
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Wallet" asp-action="Index">
                            <i class="bi bi-wallet2 me-2"></i>הארנק שלי
                        </a>
                    </li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index">
                            <i class="bi bi-shield-check me-2"></i>לוח בקרה למנהל
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminTravelPackage" asp-action="Index">
                            <i class="bi bi-airplane me-2"></i>ניהול חבילות טיולים
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminBooking" asp-action="Index">
                            <i class="bi bi-calendar-check me-2"></i>ניהול הזמנות
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminPayment" asp-action="Index">
                            <i class="bi bi-credit-card me-2"></i>ניהול תשלומים
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminUser" asp-action="Index">
                            <i class="bi bi-people me-2"></i>ניהול משתמשים
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AdminDiscount" asp-action="Index">
                            <i class="bi bi-percent me-2"></i>ניהול הנחות ומחירים
                        </a>
                    </li>
                }
                
                <li class="nav-divider"></li>
                
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <div class="nav-link user-info">
                            <i class="bi bi-person-circle me-2"></i>@User.Identity.Name
                        </div>
                    </li>
                    <li class="nav-item">
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                            <button type="submit" class="nav-link btn btn-link text-start w-100 p-0">
                                <i class="bi bi-box-arrow-right me-2"></i>התנתק
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-2"></i>התחבר
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LoginAdmin">
                            <i class="bi bi-shield-check me-2"></i>כניסה כמנהל
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus me-2"></i>הירשם
                        </a>
                    </li>
                }
            </ul>
        </nav>

        
        <div id="content" class="content-wrapper">
            
            <button type="button" id="sidebarToggle" class="btn btn-dark btn-sm d-lg-none m-3">
                <i class="bi bi-list"></i>
            </button>
            
            <main class="min-vh-100">
                <div class="container-fluid my-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="סגור"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="סגור"></button>
                </div>
            }
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <footer class="bg-dark text-white border-top border-danger mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 text-white">
                        &copy; @DateTime.Now.Year טריפווינגס - כל הזכויות שמורות
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-white">
                        <i class="bi bi-shield-lock me-1"></i>מדיניות פרטיות
                    </a>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
