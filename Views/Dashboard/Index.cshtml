@model DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2>Welcome, @Model.UserName!</h2>

<div class="row mt-4">
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Current Trips</h5>
            </div>
            <div class="card-body">
                @if (Model.CurrentBookings.Any())
                {
                    @foreach (var booking in Model.CurrentBookings)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6>@booking.TravelPackage.Destination, @booking.TravelPackage.Country</h6>
                                <p class="mb-1"><strong>Dates:</strong> @booking.TravelPackage.StartDate.ToString("MMM dd") - @booking.TravelPackage.EndDate.ToString("MMM dd, yyyy")</p>
                                <p class="mb-1"><strong>Rooms:</strong> @booking.RoomsCount</p>
                                <p class="mb-1"><strong>Status:</strong> 
                                    <span class="badge bg-success">@booking.Status</span>
                                </p>
                                <div class="mt-2">
                                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-info">View Details</a>
                                    <a asp-action="DownloadItinerary" asp-route-bookingId="@booking.Id" class="btn btn-sm btn-primary">Download Itinerary</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No current trips</p>
                }
            </div>
        </div>
    </div>

    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Upcoming Trips</h5>
            </div>
            <div class="card-body">
                @if (Model.UpcomingBookings.Any())
                {
                    @foreach (var item in Model.UpcomingBookings)
                    {
                        var booking = item.Booking;
                        <div class="card mb-3">
                            <div class="card-body">
                                <h6>@booking.TravelPackage.Destination, @booking.TravelPackage.Country</h6>
                                <p class="mb-1"><strong>Departure:</strong> @booking.TravelPackage.StartDate.ToString("MMM dd, yyyy")</p>
                                <p class="mb-1"><strong>Return:</strong> @booking.TravelPackage.EndDate.ToString("MMM dd, yyyy")</p>
                                <p class="mb-1"><strong>Rooms:</strong> @booking.RoomsCount</p>
                                <div class="alert alert-info mb-2">
                                    <strong>Time Until Departure:</strong><br>
                                    @item.TimeUntilDepartureFormatted
                                </div>
                                <div class="mt-2">
                                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-info">View Details</a>
                                    <a asp-action="DownloadItinerary" asp-route-bookingId="@booking.Id" class="btn btn-sm btn-primary">Download Itinerary</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No upcoming trips</p>
                }
            </div>
        </div>
    </div>
</div>


<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5>Quick Stats</h5>
                <div class="row">
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3 class="text-primary">@Model.CurrentBookings.Count</h3>
                            <p class="text-muted">Current Trips</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3 class="text-success">@Model.UpcomingBookings.Count</h3>
                            <p class="text-muted">Upcoming Trips</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h3 class="text-info">@Model.CartItemsCount</h3>
                            <p class="text-muted">Items in Cart</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <a asp-controller="Trips" asp-action="Gallery" class="btn btn-primary">Browse Trips</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
