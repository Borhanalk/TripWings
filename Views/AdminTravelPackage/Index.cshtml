@model IEnumerable<TravelPackage>
@{
    ViewData["Title"] = "ניהול חבילות טיולים";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-airplane me-2"></i>ניהול חבילות טיולים
        </h2>
        <a asp-action="Create" class="btn btn-danger">
            <i class="bi bi-plus-circle me-2"></i>הוסף חבילה חדשה
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>מזהה</th>
                            <th>תמונה</th>
                            <th>יעד</th>
                            <th>מדינה</th>
                            <th>תאריכים</th>
                            <th>מחיר</th>
                            <th>מספר חדרים כולל</th>
                            <th>חדרים זמינים</th>
                            <th>סוג</th>
                            <th>סטטוס</th>
                            <th>פעולות</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var package in Model)
                        {
                            <tr>
                                <td>@package.Id</td>
                                <td>
                                    @if (package.PackageImages.Any())
                                    {
                                        <img src="@package.PackageImages.First().ImageUrl" alt="@package.Destination" 
                                             class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">אין תמונה</span>
                                    }
                                </td>
                                <td>@package.Destination</td>
                                <td>@package.Country</td>
                                <td>
                                    <small>@package.StartDate.ToString("dd/MM/yyyy")<br />
                                    @package.EndDate.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>@package.Price.ToString("C")</td>
                                <td>@package.TotalRooms</td>
                                <td>@package.AvailableRooms</td>
                                <td>@package.PackageType</td>
                                <td>
                                    <span class="badge bg-@(package.IsVisible ? "success" : "secondary")">
                                        @(package.IsVisible ? "פעיל" : "מוסתר")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@package.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> ערוך
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@package.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> מחק
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>אין חבילות להצגה.
        </div>
    }
</div>
