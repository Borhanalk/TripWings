@model IEnumerable<Payment>
@{
    ViewData["Title"] = "ניהול תשלומים";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">
        <i class="bi bi-credit-card me-2"></i>ניהול תשלומים
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">כל התשלומים</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>מזהה</th>
                                <th>משתמש</th>
                                <th>הזמנה</th>
                                <th>יעד</th>
                                <th>סכום</th>
                                <th>שיטת תשלום</th>
                                <th>סטטוס</th>
                                <th>תאריך תשלום</th>
                                <th>פעולות</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>@payment.Id</td>
                                    <td>@(payment.User?.Email ?? "N/A")</td>
                                    <td>#@payment.BookingId</td>
                                    <td>@(payment.Booking?.TravelPackage?.Destination ?? "N/A")</td>
                                    <td>@payment.FinalAmount.ToString("C")</td>
                                    <td>
                                        @(payment.PaymentMethod == PaymentMethod.CreditCard ? "כרטיס אשראי" :
                                          payment.PaymentMethod == PaymentMethod.DebitCard ? "כרטיס חיוב" :
                                          payment.PaymentMethod == PaymentMethod.BankTransfer ? "העברה בנקאית" : "מזומן")
                                    </td>
                                    <td>
                                        <span class="badge bg-@(payment.Status == PaymentStatus.Paid ? "success" : payment.Status == PaymentStatus.Pending ? "warning" : payment.Status == PaymentStatus.Refunded ? "info" : "danger")">
                                            @(payment.Status == PaymentStatus.Paid ? "שולם" : payment.Status == PaymentStatus.Pending ? "ממתין" : payment.Status == PaymentStatus.Refunded ? "הוחזר" : "נכשל")
                                        </span>
                                    </td>
                                    <td>@payment.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>פרטים
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>אין תשלומים להצגה.
        </div>
    }
</div>
