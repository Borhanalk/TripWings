@model Review
@{
    ViewData["Title"] = "הוסף דירוג / Add Review";
    var package = ViewBag.Package as Package;
}

<h2>דירוג / Review: @package?.Name</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="PackageId" />
            
            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" class="form-control">
                    <option value="1">1 - גרוע / Poor</option>
                    <option value="2">2 - מקובל / Acceptable</option>
                    <option value="3">3 - טוב / Good</option>
                    <option value="4">4 - טוב מאוד / Very Good</option>
                    <option value="5">5 - מצוין / Excellent</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="שלח דירוג / Submit Review" class="btn btn-primary" />
                <a asp-controller="Packages" asp-action="Details" asp-route-id="@package?.Id" class="btn btn-secondary">בטל / Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
