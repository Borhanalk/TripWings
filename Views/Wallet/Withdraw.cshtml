@model TripWings.Models.ViewModels.BankWithdrawalRequestViewModel
@{
    ViewData["Title"] = "משיכה לחשבון בנק";
    var balance = ViewBag.Balance as decimal? ?? 0;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">
                <i class="bi bi-bank me-2"></i>משיכה לחשבון בנק
            </h2>

            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>איזון נוכחי:</strong> @balance.ToString("C")
            </div>

            <form asp-action="Withdraw" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-currency-dollar me-1"></i>סכום למשיכה
                            </label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" max="@balance" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <small class="form-text text-muted">מקסימום: @balance.ToString("C")</small>
                        </div>

                        <hr>

                        <h5 class="mb-3">פרטי חשבון הבנק</h5>

                        <div class="mb-3">
                            <label asp-for="BankName" class="form-label">
                                <i class="bi bi-bank me-1"></i>שם הבנק
                            </label>
                            <input asp-for="BankName" class="form-control" placeholder="לדוגמה: בנק הפועלים" />
                            <span asp-validation-for="BankName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BranchNumber" class="form-label">
                                    <i class="bi bi-123 me-1"></i>מספר סניף
                                </label>
                                <input asp-for="BranchNumber" class="form-control" placeholder="לדוגמה: 123" />
                                <span asp-validation-for="BranchNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="AccountNumber" class="form-label">
                                    <i class="bi bi-credit-card me-1"></i>מספר חשבון
                                </label>
                                <input asp-for="AccountNumber" class="form-control" placeholder="מספר חשבון הבנק" />
                                <span asp-validation-for="AccountNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountHolderName" class="form-label">
                                <i class="bi bi-person me-1"></i>שם בעל החשבון
                            </label>
                            <input asp-for="AccountHolderName" class="form-control" placeholder="שם מלא כפי שמופיע בחשבון" />
                            <span asp-validation-for="AccountHolderName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdNumber" class="form-label">
                                <i class="bi bi-card-text me-1"></i>מספר זהות (אופציונלי)
                            </label>
                            <input asp-for="IdNumber" class="form-control" placeholder="מספר זהות" />
                            <span asp-validation-for="IdNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdditionalInfo" class="form-label">
                                <i class="bi bi-info-circle me-1"></i>מידע נוסף (אופציונלי)
                            </label>
                            <textarea asp-for="AdditionalInfo" class="form-control" rows="3" placeholder="הערות נוספות"></textarea>
                            <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>שימו לב:</strong> הכסף יועבר לחשבון הבנק תוך 3-5 ימי עסקים. תוכלו להוריד חשבונית לאחר שהמשיכה תאושר.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>שלח בקשה למשיכה
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>ביטול
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
